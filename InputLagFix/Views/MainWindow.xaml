<Window x:Class="INPUTLAGFIX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INPUTLAGFIX"
        xmlns:vm="clr-namespace:INPUTLAGFIX.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="700"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:RegeditManagerViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="130"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Monitor InputLag Fix" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20"/>
        <Button Grid.Row="1" Content="Исправить некорректное разрешение" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="15,5" FontSize="14" FontWeight="SemiBold"
                Command="{Binding FixMonitorResolutionsCommand}"/>
        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="LightGray">
            <ListBox ItemsSource="{Binding LogMessages}" 
             Background="Transparent" BorderThickness="0"
             ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontFamily="Consolas" Margin="2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</Window>
