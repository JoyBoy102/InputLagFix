<Window x:Class="INPUTLAGFIX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INPUTLAGFIX"
        xmlns:vm="clr-namespace:INPUTLAGFIX.ViewModels"
        xmlns:v="clr-namespace:INPUTLAGFIX.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1600"
        WindowStartupLocation="CenterScreen"
        FontSize="14"
        FontWeight="DemiBold"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Window.Resources>

    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF252526" Offset="0"/>
            <GradientStop Color="#FF505050" Offset="0.5"/>
            <GradientStop Color="#FF808080" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="5">
            <TextBlock Text="WindowsTweaker" FontSize="20" Foreground="Crimson" DockPanel.Dock="Left"></TextBlock>
        </DockPanel>

        <ListBox Grid.Column="0" Grid.Row="1" Style="{StaticResource ListBoxStyle}" SelectedItem="{Binding SelectedOptimizationsCategory}" ItemsSource="{Binding OptimizationsCategoryItems}" ItemContainerStyle="{StaticResource SelectedListBoxItemStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Width="24" Height="24" Source="{Binding Img}"/>
                        <TextBlock Grid.Column="1" Text="{Binding DisplayName}" 
                            TextWrapping="Wrap" 
                            Margin="2"/>
                    </Grid>
   
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border Grid.Column="1" Grid.Row="1" BorderBrush="Transparent" BorderThickness="0" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Foreground="White" FontSize="32" Grid.Row="0" Text="{Binding SelectedOptimizationsCategory.DisplayName}"></TextBlock>
                <ContentControl Grid.Row="1" Content="{Binding SelectedOptimizationsCategory.Control}" Padding="20" Margin="20">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="Opacity" Value="0"/>
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <!-- Анимация при загрузке -->
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                Storyboard.TargetProperty="Opacity"
                                From="0" To="1" 
                                Duration="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Grid>
        </Border>

        <Border Grid.Row="2"
                Grid.ColumnSpan="2"
                Background="#FF1E1E1E"
                BorderThickness="0,1,0,0" 
                BorderBrush="#FF007ACC">
            <ListBox ItemsSource="{Binding AllLogMessages}" 
                     Background="Transparent" 
                     BorderThickness="0"
                     Foreground="LightGray"
                     FontFamily="Consolas"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <TextBlock Text="{Binding}" 
                                               Margin="5,2"
                                               TextWrapping="Wrap"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>

    </Grid>
</Window>
