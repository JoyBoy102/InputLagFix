        <Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="LightGray">
            <ListBox ItemsSource="{Binding LogMessages}" 
             Background="Transparent" BorderThickness="0"
             ScrollViewer.VerticalScrollBarVisibility="Auto">
