                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontFamily="Consolas" Margin="2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        -->
    </Grid>
</Window>
