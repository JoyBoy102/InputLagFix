<UserControl x:Class="INPUTLAGFIX.Views.AutoRuns"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:INPUTLAGFIX.Views"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:INPUTLAGFIX.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:AutoRunsViewModel></vm:AutoRunsViewModel>
    </UserControl.DataContext>
    <UserControl.Resources>
        <DataTemplate x:Key="ListBoxDataTemplate">
            <Border Background="LightGray" CornerRadius="10" Padding="5" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" HorizontalAlignment="Left" Text="{Binding DisplayName}" VerticalAlignment="Center"></TextBlock>
                    <Button Grid.Column="1" Content = "Удалить" HorizontalAlignment="Right"></Button>
                </Grid>
            </Border>
        </DataTemplate>

        <Style x:Key="NoSelectionListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Header="Ключи реестра" Padding="5" Grid.Row="0" Margin="5 5 5 5">
            <ListBox ItemTemplate="{StaticResource ListBoxDataTemplate}" ItemsSource="{Binding RegeditAutoRuns}" ItemContainerStyle="{StaticResource NoSelectionListBoxItemStyle}"></ListBox>
        </GroupBox>
        <GroupBox Header="Задачи" Padding="5" Grid.Row="1" Margin="5 5 5 5">
            <ListBox ItemTemplate="{StaticResource ListBoxDataTemplate}"></ListBox>
        </GroupBox>
        <GroupBox Header="Службы" Padding="5" Grid.Row="2" Margin="5 5 5 5">
            <ListBox ItemTemplate="{StaticResource ListBoxDataTemplate}"></ListBox>
        </GroupBox>
    </Grid>
</UserControl>
