<UserControl x:Class="INPUTLAGFIX.Views.AutoRuns"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:INPUTLAGFIX.Views"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:INPUTLAGFIX.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#FF252526">
    <UserControl.DataContext>
        <vm:AutoRunsViewModel></vm:AutoRunsViewModel>
    </UserControl.DataContext>
    <UserControl.Resources>
        <DataTemplate x:Key="ListBoxDataTemplate">
            
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" HorizontalAlignment="Left" Text="{Binding DisplayName}" VerticalAlignment="Center"></TextBlock>
                    <Button Grid.Column="1" Content = "Удалить" HorizontalAlignment="Right"></Button>
                </Grid>
           
        </DataTemplate>

        
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Header="Ключи реестра" Grid.Row="0">
            <ListBox ItemTemplate="{StaticResource ListBoxDataTemplate}" ItemsSource="{Binding RegeditAutoRuns}" Style="{StaticResource ListBoxStyle}"></ListBox>
        </GroupBox>
        <GroupBox Header="Задачи" Grid.Row="1">
            <ListBox ItemTemplate="{StaticResource ListBoxDataTemplate}" ItemsSource="{Binding TaskAutoRuns}" Style="{StaticResource ListBoxStyle}"></ListBox>
        </GroupBox>
        <GroupBox Header="Службы" Grid.Row="2">
            <ListBox ItemTemplate="{StaticResource ListBoxDataTemplate}" ItemsSource="{Binding ServicesAutoRuns}" Style="{StaticResource ListBoxStyle}"></ListBox>
        </GroupBox>
    </Grid>
</UserControl>
