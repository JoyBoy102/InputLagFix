<?xml version="1.0" encoding="utf-8"?>
<CleanFolders>
	<!-- Основные временные файлы -->
	<TemporaryFiles ruName="Временные файлы">
		<Folder>%USERPROFILE%\AppData\Local\Temp</Folder>
		<Folder>%SystemRoot%\Temp</Folder>
		<Folder>%SystemDrive%\Temp</Folder>
	</TemporaryFiles>

	<!-- Кэш миниатюр -->
	<ThumbnailCache ruName="Кэш эскизов">
		<Folder>%USERPROFILE%\AppData\Local\Microsoft\Windows\Explorer</Folder>
	</ThumbnailCache>

	<!-- Кэш обновлений -->
	<DeliveryOptimizationFiles ruName="Файлы оптимизации доставки">
		<Folder>%SystemRoot%\ServiceProfiles\NetworkService\AppData\Local\Microsoft\Windows\DeliveryOptimization</Folder>
		<Folder>%SystemRoot%\SoftwareDistribution\Download</Folder>
	</DeliveryOptimizationFiles>

	<!-- Системный кэш -->
	<SystemCache ruName="Системный кэш">
		<Folder>%SystemRoot%\Prefetch</Folder>
		<Folder>%USERPROFILE%\AppData\Local\Microsoft\Windows\INetCache</Folder>
		<Folder>%USERPROFILE%\AppData\Local\Microsoft\Windows\INetCookies</Folder>
		<Folder>%USERPROFILE%\AppData\Local\Microsoft\Windows\History</Folder>
	</SystemCache>

	<!-- Логи и отчеты об ошибках -->
	<ErrorReports ruName="Логи ошибок">
		<Folder>%USERPROFILE%\AppData\Local\CrashDumps</Folder>
		<Folder>%SystemRoot%\Minidump</Folder>
		<Folder>%SystemRoot%\System32\LogFiles</Folder>
		<Folder>%SystemRoot%\Logs</Folder>
		<Folder>%SystemRoot%\Panther</Folder>
	</ErrorReports>

	<!-- Кэш графических драйверов -->
	<DriverCache ruName="Кэш драйверов">
		<!-- NVIDIA -->
		<Folder>%USERPROFILE%\AppData\Local\NVIDIA\DXCache</Folder>
		<Folder>%USERPROFILE%\AppData\Local\NVIDIA\GLCache</Folder>
		<!-- AMD -->
		<Folder>%USERPROFILE%\AppData\Local\AMD\DxCache</Folder>
		<Folder>%USERPROFILE%\AppData\Local\AMD\GLCache</Folder>
		<!-- Intel -->
		<Folder>%USERPROFILE%\AppData\Local\Intel\ShaderCache</Folder>
	</DriverCache>

	<!-- Временные установочные файлы -->
	<InstallationFiles ruName="Установочные файлы">
		<Folder>%USERPROFILE%\Downloads\*.tmp</Folder>
		<Folder>%USERPROFILE%\Downloads\*.temp</Folder>
		<Folder>%SystemDrive%\$Windows.~BT</Folder>
		<Folder>%SystemDrive%\$Windows.~WS</Folder>
		<Folder>%SystemDrive%\Windows.old</Folder>
	</InstallationFiles>

	<!-- Корзина и временные файлы пользователя -->
	<UserJunk ruName="Пользовательский мусор">
		<Folder>%SystemDrive%\$Recycle.Bin</Folder>
		<Folder>%USERPROFILE%\Recent</Folder>
		<Folder>%USERPROFILE%\AppData\Local\Microsoft\Windows\Burn</Folder>
		<Folder>%USERPROFILE%\AppData\Roaming\Microsoft\Windows\Recent</Folder>
	</UserJunk>

	<!-- Кэш Microsoft Store -->
	<StoreCache ruName="Microsoft Store">
		<Folder>%USERPROFILE%\AppData\Local\Packages\Microsoft.WindowsStore_*\LocalState\Cache</Folder>
		<Folder>%USERPROFILE%\AppData\Local\Packages\Microsoft.Windows.Photos_*\LocalState</Folder>
		<Folder>%USERPROFILE%\AppData\Local\Microsoft\Windows\DeliveryOptimization</Folder>
	</StoreCache>
</CleanFolders>